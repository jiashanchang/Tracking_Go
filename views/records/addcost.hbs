<h3>新增支出</h3>
<div class="row">
  <div class="row">
    <div class="input-field">
      <select id="categoriesList"></select>
      <select id="pay"></select>
    </div>
  </div>

  <div class="row">
    <div class="input-field">
      <input type="date" placeholder="日期" id="inputCostDate" />
    </div>
  </div>

  <div class="row">
    <div class="input-field">
      <input type="text" placeholder="金額" id="inputCostAmount" onkeyup="this.value=this.value.replace(/\D/g,'').replace(/^0{1,}/g,'')" />
    </div>
  </div>

  <div class="row">
    <div class="input-field">
      <input type="text" placeholder="備註" id="inputCostRemark" />
    </div>
  </div>

  <div class="row">
    <div id="addCost" class="btn red darken">新增</div>
    <a href="/property" class="btn">取消</a>
  </div>
</div>

<script type="text/javascript" src="/javascript/records/addcost.js"></script>